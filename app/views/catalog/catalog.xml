<StackLayout xmlns:Card="nativescript-cardview"   
             class="st-catalog" 
             loaded="onLoaded">
    <StackLayout class="st-image">
        <Image src="res://bulgaria_santim" class="image"/>
    </StackLayout>
    <Label text="Coins of Principality Bulgaria 1878-1908" textWrap="true" class="title"/>
    <GridLayout rows="*, *" columns="*, *">
        <Card:CardView class="cardStyle" row="0" col="0" margin="10" elevation="40" radius="5" id="btn-copper" >
            <Button text="Copper" tap="goToCopper" class="btn-menu" />
        </Card:CardView>
        <Card:CardView class="cardStyle" row="0" col="1" margin="10" elevation="40" radius="5" id="btn-silver" >
            <Button text="Silver" tap="goToSilver" class="btn-menu" />
        </Card:CardView>
        <Card:CardView class="cardStyle" row="1" col="0" margin="10" elevation="40" radius="5" id="btn-gold" >
            <Button text="Gold" tap="goToGold" class="btn-menu" />
        </Card:CardView>
        <Card:CardView class="cardStyle" row="1" col="1" margin="10" elevation="40" radius="5" id="btn-all">
            <Button text="All Coins" tap="goToAll" class="btn-menu"  />
        </Card:CardView>
    </GridLayout>
</StackLayout>